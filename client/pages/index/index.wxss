.button-wrapper {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  z-index: 999;
  background-color: #fff;
  box-shadow: 1rpx 1.5rpx 0 0 rgba(63, 19, 19, 0.5), 1rpx 0 0 0 rgba(0, 0, 0, 0.5);
  border-top: solid 1px rgba(0, 0, 0, 0.1);
}

.button-wrapper image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 15rpx;
}

.button-wrapper text {
  font-size: 30rpx;
  line-height: 42rpx;
}

navigator.button-with-icon {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
}

.big-pic-wrapper .big-pic {
  height: 800rpx;
  width: 540rpx;
  border-radius: 6rpx;
    box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.2);


}

.big-pic-wrapper {
  margin: 40rpx auto;
}

.big-pic-wrapper .big-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 350;
  margin-top: 10rpx;
}

.big-pic-wrapper .recommend {
  margin: 20rpx auto;
}
